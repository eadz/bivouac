%h1 New Site
%form{:action => "/sites/create"}
  - if @error
    %p#errors
      = @error
  %label{:for => "domain"}
    Site name:
  %input{:id => "domain", :type => "text", :name => "site[domain]"}
  %br
  %br
  %label{:for => "ssh_public_key"}
    SSH public key:
  %textarea{:id => "ssh_public_key", :cols => "40", :rows => "5", :name => "site[ssh_public_key]"}
  %br
  %br
  %input{:id => "submit", :name => "submit", :type => "submit", :value => "Save"}

%p
  %a{:href => '/', :title => 'Home'}
    Home

