%h1 New Site
%form{:action => "/sites/create"}
  %label{:for => "domain"}
    Site name:
  %input{:id => "domain", :type => "text", :name => "site[domain]"}
  %br
  %br
  %label{:for => "ssh_public_key"}
    SSH public key:
  %input{:id => "ssh_public_key", :type => "textarea", :name => "site[ssh_public_key]"}
  %br
  %br
  %input{:id => "submit", :name => "submit", :type => "submit", :value => "Save"}


