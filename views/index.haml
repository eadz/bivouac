- @page_title = "Welcome campers!"

%form{:action => "/sites/create", :method => "post"}
  - if @site.error
    %p#errors
      = @site.error
  %label{:for => "name"}
    Name your site
  %input{:id => "name", :type => "text", :name => "site[name]", :value => @site.name}
  %code.preview
    http://your-site-name.com/ (js to come)
  %label{:for => "ssh_public_key"}
    SSH public key
  %textarea{:id => "ssh_public_key", :cols => "40", :rows => "5", :name => "site[ssh_public_key]"}
    = @site.ssh_public_key
  %br
  %br
  %input{:id => "submit", :name => "submit", :type => "submit", :value => "Save", :class => "button"}

%h3 Other bivvies

- @sites.each do |s|
  %a{:href => s.name, :title => 'Show'}
    = s.name
  <br/>

